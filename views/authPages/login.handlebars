<main>


    <div class="error">
        {{#if error}}
        {{error}}
        {{/if}}

    </div>

    <form method="POST" id="login-form" action='/login'>
        <label for="username">
            Enter username:
            <input type="text" name="username" id="username">
        </label>

        <label for="password">
            Enter password:
            <input type="password" name="password" id="password">
        </label>
        <input type="submit" name="submit" class="button">

    </form>


</main>